@model TrouveUnBand.Models.Band

@*
    Metadata de Schema.org
*@
<div>
    @Html.DisplayNameForModel()
    <div vocab="http://schema.org/" typeof="MusicGroup">
        <h2 property="name">@Model.Name</h2>
        <span property="description">
            @Model.Description
        </span>
        <meta property="place" content="@Model.Location" />
            
            @foreach (var item in Model.Users)
            {
                <div property="musicGroupMember" typeof"person">
                    <meta property="familyName" content="@item.LastName" />
                    <meta property="givenName" content="@item.FirstName" />
                </div>
            }
    </div>
</div>
