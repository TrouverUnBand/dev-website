@{
    ViewBag.Title = "Search";
}

<div class="form-group">
@using (Ajax.BeginForm("Filter", "Search", FormMethod.Get, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "SearchResults" }))
{
    <div class="input-group input-group-lg searchbar">
        @Html.TextBox("searchstring", "", new { @class = "form-control", @placeholder = "Recherche" })
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Go!</button>
        </span>
    </div>

    <div class="form-inline searchform">
        @Html.CheckBox("cbBandsChecked", true) <span>Bands</span>
        @Html.CheckBox("cbMusiciansChecked", true) <span>Musiciens</span>
        @Html.CheckBox("cbAdvertsChecked", true) <span>Annonces</span>
        @Html.CheckBox("cbEventsChecked", true) <span>Événements</span>
    </div>

    <div class="form-inline searchform">
        @Html.DropDownList("selectedCategory", (SelectList)ViewBag.Categories, new { @class = "form-control" })
        @Html.DropDownList("selectedGenre", (SelectList)ViewBag.Genres, "tous les genres", new { @class = "form-control" })
        @Html.TextBox("location", "", new { @class = "form-control", @placeholder = "i.e. Québec" })
        <div class="input-group">
            @Html.TextBox("radius", "20", new { @class = "form-control", @placeholder = "Rayon" })
            <span class="input-group-addon"><label>KM</label></span>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="dropdown">
                <a id="dLabel" role="button" data-toggle="dropdown" class="btn btn-primary" data-target="#" href="/page.html">
                    tous les genres <span class="caret"></span>
                </a>
                <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                    @foreach (var genre in (SelectList)ViewBag.Genres)
                    {
                        <li class="dropdown-submenu">
                            <a tabindex="-1" href="#">@genre.Text</a>
                            <ul class="dropdown-menu">
                            @foreach (var subgenre in (List<SelectList>)ViewBag.Subgenres)
                            {
                                <li><a tabindex="-1" href="#">@subgenre.Select(x => x.Text)</a></li>
                            }
                            </ul>
                        </li>
                    }       
                </ul>
            </div>
        </div>
    </div>
}
</div>

<div id="SearchResults">
    @Html.Partial("_SearchResults")
</div>
