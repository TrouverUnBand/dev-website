@model TrouveUnBand.Models.Band

@{
    ViewBag.Title = "Confirmation";
}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">        
        <div class="modal-content">
            <h2>Confirmation de la création</h2>

            @Html.BeginForm("CreateSubmit","Group",FormMethod.Post,
                    <div class="editor-label">
                        @Html.Label("Nom")
                    </div>
                    <div>

                    </div>

                    <div class="editor-label">
                        @Html.Label("Genre")
                    </div>
                    <div>
                    @if(Session["myBand"] != null)
                    {
                        foreach (var item in ((TrouveUnBand.Models.Band)Session["myBand"]).Genres)
                        {
                            @item.Name
                        }
                    }
                    </div>
        
                    <div>
                    @if (Session["myMusician"] != null)
                    {
                        foreach (var item in (List<TrouveUnBand.Models.Musician>)Session["myMusicians"])
                        {
                            @item.User.FirstName @item.User.LastName
                        }
                    }
                    </div>
            
                    <div class="editor-label">
                        @Html.Label("Location")
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Location)
                        @Html.ValidationMessageFor(model => model.Location)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Description")
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>			
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
