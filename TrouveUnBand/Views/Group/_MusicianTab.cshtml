@model TrouveUnBand.Models.Musician

@{
    ViewBag.Title = "Resultat de recherche";
}
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Musiciens</h2>


        <div>
            @if ((((TrouveUnBand.Models.Band)ViewData["myBand"]).Musicians).Any())
            {
                int j = 0;
        
                <table>
                    @foreach (var item in ((TrouveUnBand.Models.Band)ViewData["myBand"]).Musicians)
                    {

                        j++;
                        <tr>
                            <td>
                                <span>@item.User.FirstName @item.User.LastName</span>
                            </td>
                            <td>
                                @if (j > 1)
                                {
                                    <a id="XrmMusician" href="#" onclick='RemoveMusician("@j")'><span  class="glyphicon glyphicon-search"></span></a>
                                }
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                TempData["TempDataError"] = "Profil musicien introuvable";
            }
        </div>



        <div>
            @using (Ajax.BeginForm("SearchMusician", "Group", FormMethod.Get, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "ConfirmCreateView" }))
            {
                @Html.Editor("AddMusicianInput")
                <button type="submit" value="Search">
                    <span  class="glyphicon glyphicon-search">
                    </span>
                </button>
                <table class="table table-striped table-bordered table-hover" data-toggle="table">
                    <tr>
                        <th>
                            @Html.Display("Prénom")
                        </th>
                        <th>
                            @Html.Display("Nom de famille")
                        </th>
                        <th>
                            @Html.Display("Identifiant")
                        </th>
                        <th>
                        </th>
                    </tr>
                    @if ((List<TrouveUnBand.Models.Musician>)ViewData["SearchMusicians"] != null)
                    {
                        foreach (var item in (List<TrouveUnBand.Models.Musician>)ViewData["SearchMusicians"])
                        {
                            <tr>
                                <td>
                                    @item.User.FirstName
                                </td>
                                <td>
                                    @item.User.LastName
                                </td>
                                <td>
                                    @item.User.Nickname
                                </td>
                                <td>
                                    <button type="button" class="btn btn-default btn-sm" title="Edit" onclick="location.href='@Url.Action("AddMusician", "Group", new { id = item.MusicianId })'">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </table>
            }
        </div>
    </div>
</div>
