@model TrouveUnBand.Models.Band

@{
    ViewBag.Title = "_ BandBaseTab";
    var band = (TrouveUnBand.Models.Band)ViewData["BandData"];
}
<div class="panel panel-default">
    <div class="panel-body">
        <div>
            <h2>Crée ton band - <small>informations de base</small></h2>
            @using (Ajax.BeginForm("SubmitInfo", "Group", FormMethod.Get, new AjaxOptions
            {
                HttpMethod = "Get",
                UpdateTargetId = "ConfirmModalDialog"
            },
                new { @class = "col-md-offset-1"}
                ))
            {
        
                <div>
                    @Html.Label("Nom")
                </div>
                <div>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="editor-label">
                    @Html.Label("Location")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Location)
                    @Html.ValidationMessageFor(model => model.Location)
                </div>
                <div class="editor-label">
                    @Html.Label("Description")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                <button type="submit" value="Créer" class="btn btn-default btn-md">Envoyer</button>
            }
        </div>
    </div>
</div>
