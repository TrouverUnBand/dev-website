@model TrouveUnBand.Models.Band

@{
    ViewBag.Title = "_ BandBaseTab";
    var band = (TrouveUnBand.Models.Band)ViewData["BandData"];
}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Informations de base</h2>
                    @using (Ajax.BeginForm("BaseSubmit", "Group", FormMethod.Get, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "ConfirmCreateView" }))
                    {
            
                        <div class="form-group row">
                            @Html.EditorFor(model => model.Name, new { @class = "form-control ", @placeholder = "Nom" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                                
                        <div class="form-group row">
                            @Html.EditorFor(model => model.Location, new { @class = "form-control ", @placeholder = "Location" })
                            @Html.ValidationMessageFor(model => model.Location)
                        </div>
                                
                        <div class="form-group row">
                            @Html.EditorFor(model => model.Description, new { @class = "form-control ", @placeholder = "Description" })
                            @Html.ValidationMessageFor(model => model.Description)

                        </div>
                        <button type="submit" value="Créer" class="btn">Mettre à jour</button>
                    }
                </div>
            </div>