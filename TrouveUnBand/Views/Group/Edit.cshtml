@model TrouveUnBand.Models.Band

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    @using (Html.BeginForm("Edit", "Group", FormMethod.Post, new { @id = "FormBandModification" }))
    {
        @Html.HiddenFor(model => model.Band_ID)
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Nom du groupe")
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>

            <div class="col-md-6">
                @Html.Label("Ville")
                @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
            </div>

            <div class="col-md-12">
                @Html.Label("Description")
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            </div>

            <div class="col-md-12">
                @Html.Label("Genres musicaux")
                <select id="MultiSelect" name="cbSelectedGenres" class="selectpicker form-control" title="Genres musicaux"
                        data-width="100%" data-live-search="true" data-selected-text-format="count>3" multiple>
                    @foreach (var list in (List<List<String>>)ViewBag.Subgenres)
                    {
                        <li class="dropdown-submenu">
                            <optgroup label="@list.FirstOrDefault()">
                                <ul class="dropdown-menu">
                                    @foreach (var genre in list)
                                    {
                                        if (Model.Genres.Any(x => x.Name == genre))
                                        {
                                            <option selected>@genre</option>
                                        }
                                        else
                                        {
                                            <option>@genre</option>
                                        }
                                    }
                                </ul>
                            </optgroup>
                        </li>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </div>

        <div class="col-md-6">
            <button type="reset" class="btn btn-default">Revenir à la liste</button>
        </div>
    }
    
    <div class="col-md-12">
        @Html.Partial("_MusicianTable")
    </div>
    
    <div class="col-md-6 col-md-offset-6">
        <button id="btnTerminer" type="submit" class="btn btn-primary btn-lg col-md-12" form="FormBandModification">Terminer</button>
    </div>

</div><!--/.Container-->
