<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/signin.css")
    @Styles.Render("~/Content/bootstrap.min.css") 
    @Styles.Render("~/Content/Site.css") 
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!--NAVBAR-->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TrouveUnBand.com</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>             
                </ul>
                <ul class="nav navbar-nav navbar-right" >
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>

                @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class="navbar-form navbar-right", @role="search" }))
                {  
                    @Html.TextBox("SearchString", "", new { @class = "form-control", @placeholder = "Recherche rapide" })
                    @Html.ValidationMessage("SearchString")
                    <button type="submit" class="hidden" value="search"></button>
                }
            </div><!--/.nav-collapse -->

        </div>
    </div><!--END NAVBAR-->

    <!--MAIN CONTENT-->
    <div class="main-content container">      

        <section class="content-wrapper main-content clear-fix">
            @if (TempData["TempDataError"] != null)
            {
                <h3 id="error">@TempData["TempDataError"]</h3>
            }
            @if (TempData["notice"] != null)
            {
                <h2>@TempData["notice"]</h2>
            }
        </section>

        @RenderSection("featured", required: false)
        @RenderSection("scripts", required: false)
        @RenderBody()

    </div><!-- /.container -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/Scripts/disable-search-ddl.js")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>


