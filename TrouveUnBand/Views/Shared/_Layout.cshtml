<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/signin.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!--NAVBAR-->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TrouveUnBand.com</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li> 
                    <li>@Html.ActionLink("Groupe", "Index", "Group")</li>            
                </ul>
                <ul class="nav navbar-nav navbar-right" >
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
                @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class="navbar-form navbar-right", @role="search" }))
                {
                    @Html.TextBox("searchString", "", new { @class="form-control"});
                    <button type="submit" class="btn btn-default" id="searchString">Go!</button>
                }
            </div><!--/.nav-collapse -->
        </div>
    </div><!--END NAVBAR-->

    <!--MAIN CONTENT-->
        <div class="page-alerts">
            @if (TempData["TempDataError"] != null && TempData["TempDataError"] != "")
            {
                <div class="alert alert-danger page-alert">
                    <button type="button" class="close"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <span class="glyphicon glyphicon-ban-circle"></span><strong> Oops! </strong><span>@TempData["TempDataError"]</span>
                </div>
            }
            @if (TempData["success"] != null && TempData["success"] != "")
            {
                <div class="alert alert-success page-alert" id="alert-1">
                    <button type="button" class="close"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <span class="glyphicon glyphicon-ok"></span><strong> Bravo! </strong><span>@TempData["success"]</span>
                </div>
            }
        </div>
        <div class="container" style="padding-top:100px">
            @RenderSection("featured", required: false)
            @RenderSection("scripts", required: false)
            @RenderBody()
        </div><!-- /.container -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrapjs")
        @Scripts.Render("~/Scripts/alert.js")
        @Scripts.Render("~/Scripts/bootstrap-validation.js")
        @Scripts.Render("~/Scripts/star-rating.js")
        @Scripts.Render("~/Scripts/tooltips.js")
        @Scripts.Render("~/Scripts/ModifProfil.js")
</body>
</html>

