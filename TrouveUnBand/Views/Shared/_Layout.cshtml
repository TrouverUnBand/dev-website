<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/signin.css")
    @Styles.Render("~/Content/bootstrap.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!--NAVBAR-->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TrouveUnBand.com</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>             
                </ul>
                <ul class="nav navbar-nav navbar-right" >
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
                @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class="navbar-form navbar-right", @role="search" }))
                {
                    @Html.TextBox("searchString", "", new { @class="form-control"});
                    <button type="submit" class="btn btn-default" id="searchString">Go!</button>
                }
            </div><!--/.nav-collapse -->
        </div>
    </div><!--END NAVBAR-->

    <!--MAIN CONTENT-->
    <div class="container" style="padding-top:100px">      

        <section class="content-wrapper main-content clear-fix">
            @if (TempData["TempDataError"] != null)
            {
                <h4 id="error" class="text-danger col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    @TempData["TempDataError"]
                </h4>
            }
            @if (TempData["notice"] != null)
            {
                <h4 id="error" class="text-danger col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    @TempData["notice"]
                </h4>
            }
        </section>

        @RenderSection("featured", required: false)
        @RenderSection("scripts", required: false)
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
    </div><!-- /.container -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
</body>
</html>


