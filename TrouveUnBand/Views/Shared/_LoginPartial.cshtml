@if (Request.IsAuthenticated)
{
    <p class="nav navbar-nav">
        Hi, @Html.ActionLink(User.Identity.Name, "Manage", "Users", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("Logout", "Users", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
            <li>@Html.ActionLink("My Profile", "ProfileModification", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })</li> 
        }
    </p>
}
else
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Inscription", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Connexion", "Login", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>

}
