@model  TrouveUnBand.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Page d'accueil";
}
<div class="home-container">
    <div id="home-jumbotron" class="jumbotron">
        <div id="home-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img id="homeImage" src="" alt="">
                    <div class="carousel-caption">
                        <h1 class="col-md-12">
                            À la recherche d'un band?
                        </h1>
                        <h3>
                            Recherchez un band, un musicien ou un événement.
                        </h3>
                        <h3>
                            Créez vos propres événements et annonces.
                        </h3>
                        <h3>
                            Faites la promotion de votre band, votre événement ou votre bar.
                        </h3>
                        <h3>
                            Tout ça GRATUITEMENT!
                        </h3>
                        <p>@Html.ActionLink("Inscrivez-vous", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary btn-lg col-md-6 col-md-offset-3" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="home-content-container">

        <div class="home-section col-md-12">
            <div class="container">
                <div class="home-section-header col-md-12">
                    <h1 class="">Derniers musiciens inscrits</h1>
                    <hr class="home-colorgraph col-md-4 col-md-offset-4">
                </div>
                <div class="home-section-content">
                    @foreach (var item in Model.UserList)
                    {
                        <div class="col-md-3">
                            <div class="thumbnail card">
                                <img src="@item.Photo" alt="Image">
                                <div class="caption">
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                    <p>
                                        <span class="glyphicon glyphicon-map-marker"></span>
                                        <span>@item.Location</span>
                                    </p>
                                    <b>@item.Type</b>
                                    <p>
                                        @foreach (var genre in item.Genres)
                                        {
                                            <span class="label label-default">@genre</span>
                                        }
                                    </p>
                                    <p>
                                        @Html.ActionLink("Voir profil", "ViewProfile", "Search", new { type = item.Type, Id = item.User_ID }, new { @class = "btn btn-primary", @role = "button" })
                                        <a href="#" class="btn btn-default" role="button">Button</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
