@model TrouveUnBand.Models.MusicianProfileViewModel

<div class="carousel slide article-slide col-md-12" id="profile-photo-carousel">
    <div class="carousel-inner cont-slider">
        <div class="item active">
            <img alt="" title="" src="@Model.ProfilePicture.stringProfilePicture" />
        </div>
        <div class="item">
            <img alt="" title="" src="http://placehold.it/561x386" />
