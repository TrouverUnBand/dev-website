        </div>
        <div class="item">
            <img alt="" title="" src="http://placehold.it/561x386" />
        </div>
        <div class="item">
            <img alt="" title="" src="http://placehold.it/561x386" />
        </div>
    </div>
</div>
<div class="profile-photo-list col-md-offset-9">
    <ul class="list-unstyled ">
        <li class="active" data-slide-to="0" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="@Model.ProfilePicture.stringProfilePicture" />
        </li>
        <li data-slide-to="1" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="http://placehold.it/250x172">
        </li>
        <li data-slide-to="2" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="http://placehold.it/250x172">
        </li>
        <li data-slide-to="3" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="http://placehold.it/250x172">
        </li>
        <li data-slide-to="4" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="http://placehold.it/250x172">
        </li>
        <li data-slide-to="5" data-target="#profile-photo-carousel">
            <img width="120" alt="" src="http://placehold.it/250x172">
        </li>
    </ul>
</div>

<script>
    $(document).ready(function () {

        $(".profile-photo-list li").click(function () {
            $(".profile-photo-list li").removeClass("active");
            $(this).addClass("active");
        });
    });
</script>