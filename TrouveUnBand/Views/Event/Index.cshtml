<script>
    var onglet = document.getElementById("event");
    onglet.setAttribute("class", "active");
</script>
<div class="top-80">

@model IEnumerable<TrouveUnBand.Models.Event>

@{
    ViewBag.Title = "Événements";
}

<h2>Événements</h2>

<p>
    @if(User.Identity.Name != "")
    {
        @Html.ActionLink("Créer un événement", "Create", new { controller = "Event" }, new { @class="btn btn-primary" })
    }
</p>
<div class="row">
@foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail card">
            @if (item.EventPhoto == null)
            {
                <img src="http://placehold.it/250x172" alt="Image">
            }
            else
            {
                var photo = "data:image/jpeg;base64," + Convert.ToBase64String(item.EventPhoto);
                <img src="@photo" width="250" height="172" class="photo" alt="Image">
            }
                <div class="caption">
                    <h3><span class="glyphicon glyphicon-music"></span> @Html.DisplayName(item.EventName)</h3>
                    <p>
                        @Html.DisplayName(item.EventLocation)
                    </p>
                    <p>
                        @Html.DisplayName(item.EventDate.ToString("dd MMMM yyyy à HH:mm"))
                    </p>
                    <p>
                        <span class="glyphicon glyphicon-map-marker"></span>
                        @Html.DisplayName(item.EventCity)
                    </p>
                    <b>@Html.DisplayName(item.EventGender)</b>
                    <p>
                        @Html.ActionLink("Détails", "EventProfile", new { id = item.EventId }, new { @class = "btn btn-default" })
                        @if (item.EventCreator == User.Identity.Name)
                        {
                            @Html.ActionLink("Modifier", "Edit", new { id = item.EventId }, new { @class = "btn btn-primary" })
                            <label> @Html.ActionLink("Annuler", "Delete", new { id = item.EventId }, new { @class = "btn btn-danger" })</label>
                        }
                    </p>
                </div>
            </div>
        </div>
    }
</div>
</div>
