<script>
    var onglet = document.getElementById("event");
    onglet.setAttribute("class", "active");
</script>


@model IEnumerable<TrouveUnBand.Models.Event>

@{
    ViewBag.Title = "Évènements";
}

<h2>Évènements</h2>

<p>
    @if (User.Identity.Name != "")
    {
        @Html.ActionLink("Créer un évènement", "Create", new { controller = "Event" }, new { @class = "btn btn-primary" })
    }
</p>
<div class="row">
@foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail card">
            @if (item.EventPhoto == null)
            {
                <img src="http://placehold.it/250x172" alt="Image">
            }
            else
            {
                var photo = "data:image/jpeg;base64," + Convert.ToBase64String(item.EventPhoto);
                <img src="@photo" width="350" height="auto" class="photo" alt="Image">
            }
                <div class="caption">
                    <h3>@Html.DisplayName(item.EventName)</h3>
                    <p>@Html.DisplayName(item.EventLocation)</p>
                    <p>
                        <span class="glyphicon glyphicon-map-marker"></span>
                        @Html.DisplayName(item.EventCity)
                    </p>
                    <p>
                        @Html.DisplayName(item.EventDate.ToString())
                    </p>
                    <b>@Html.DisplayName(item.EventGender)</b>
                    <p>
                        @Html.ActionLink("Détails", "Details", new { id = item.EventId }, new { @class = "btn btn-default" })
                    @if (item.EventCreator == User.Identity.Name)
                    {
                        @Html.ActionLink("Modifier", "Edit", new { id = item.EventId }, new { @class = "btn btn-primary" })
                    }
                    </p>
                </div>
            </div>
        </div>
    }
</div>